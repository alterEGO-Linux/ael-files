#!/usr/bin/env sh
# :----------------------------------------------------------------------- INFO
# :[~/.ael/shellutils/fuck]
# :author        : fantomH @alterEGO Linux
# :created       : 2023-08-02 00:10:38 UTC
# :updated       : 2024-09-16 10:46:14 UTC
# :description   : Repeats last cmd with sudo if forgotten.

fuck() {

    echo "================================================================================"
    echo "[+] f**k()"
    echo "    Repeats last cmd with sudo if forgotten."
    echo "    Running <sudo \$(history -p !!)"
    echo "================================================================================"
    echo

    sudo $(history -p !!)
  }
