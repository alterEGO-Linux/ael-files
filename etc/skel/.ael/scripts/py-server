#!/usr/bin/env sh
# :----------------------------------------------------------------------- INFO
# :[~/.ael/scripts/py-server]
# :author        : fantomH @alterEGO Linux
# :created       : 2024-09-10 16:58:34 UTC
# :updated       : 2024-09-10 16:58:38 UTC
# :description   : Create a Python HTTP server.

py-server() {

    ports=('8000' '8001' '8002')

    CONTINUE=true
    while $CONTINUE; do
      for p in "${ports[@]}"; do
        if [[ -z $(sudo netstat -tulanp | grep ":$p") ]]; then
          port="$p"
          CONTINUE=false
          break
        fi
      done
    done

    echo "================================================================================"
    echo "[+] py-server()"
    echo "    Starting Python web server on port ${port}"
    echo "================================================================================"
    echo

    python -m http.server ${port}
  }
