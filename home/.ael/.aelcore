source_shellutils() {

    local SHELLUTILS_SOURCE
    local SHELLUTILS_DIRECTORY
    local _shellutils_as_symlinks
    local _shellutils_copy_updated
    local shellutil
    local src dst

    SHELLUTILS_SOURCE="${LOCAL_AEL_FILES_GIT}/shellutils"
    SHELLUTILS_DIRECTORY="${LOCAL_AEL_DIRECTORY}/shellutils"
    _shellutils_as_symlinks=true
    _shellutils_copy_updated=true

    for d in utils; do
        mkdir -p "$SHELLUTILS_DIRECTORY"/${d}
    done

    for shellutil in "${SHELLUTILS[@]}"; do

        src="${SHELLUTILS_SOURCE}/${shellutil}"
        dst="${SHELLUTILS_DIRECTORY}/${shellutil}"

        [ -e "$src" ] || continue

        # --- Symlink
        if [ "${_shellutils_as_symlinks}" == true  ]; then
            # --- Verify if symlink.
            if [ -L "$dst" ]; then
                # --- Verify if dst points somewhere else, fix it.
                if [ "$(readlink -f -- "$dst")" != "$src" ]; then
                    ln -sfn "$src" "$dst"
                fi
            else
                # --- remove regular file if exist and create symlink.
                [ -e "$dst" ] && rm -rf -- "$dst"
                ln -s "$src" "$dst"
            fi
        else
            # --- remove symlink if exist.
            [ -L "$dst" ] && rm -f -- "$dst"

            if [ -f "$dst" ]; then
                # --- keep copy updated?
                if [ "${_shellutils_copy_updated}" == true ]; then
                    if [ "$(readlink -f -- "$dst")" != "$(readlink -f -- "$src")" ]; then
                        # --- copy only if content differs.
                        if ! cmp -s "$src" "$dst"; then
                            cp -f "$src" "$dst"
                        fi
                    fi
                fi
            else
                # --- make a copy.
                cp "$src" "$dst"
            fi
        fi

        [ -f "$dst" ] && . "$dst"

    done
}
source_shellutils

