snake-env() {

    SNAKE_ENV_DIR="${HOME}/.ael/snake-envs"

    if [ ! -d "${SNAKE_ENV_DIR}" ]; then
        mkdir "${SNAKE_ENV_DIR}"
    fi

    list_all_environments() {

        echo "[+] Fetching ALL python environments' list:"
        find ~ -type d -name 'bin' -exec test -e '{}/python' ';' -print | xargs dirname
    }

    usage() {
        echo Hello
    }

    if [[ "$#" -eq 0 ]]; then
        usage
    fi
    
    while (( "$#" )); do
        case $1 in
            -h|--help)
            usage
            ;;
            --allenvs)
            list_all_environments
            ;;
      esac
      shift
    done
}
